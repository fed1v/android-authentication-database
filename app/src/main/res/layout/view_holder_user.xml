<?xml version="1.0" encoding="utf-8"?>

<!--CardView-->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:paddingBottom="3dp"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        >


        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:text="Status"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvStatus"
            android:layout_marginTop="5dp"
            android:text="id"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvLastLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRegDate"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:text="Last login"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvId"
            android:layout_marginTop="5dp"
            android:text="Email"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvRegDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEmail"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:text="Registration Date"
            android:textSize="12sp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textViewBlock"
        android:layout_width="100dp"
        android:layout_height="87dp"
        android:background="#FF7043"
        android:text="Block"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="12pt"
        app:layout_constraintTop_toBottomOf="@+id/textViewDelete"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/textViewUnblock"
        android:layout_width="100dp"
        android:layout_height="87dp"
        android:background="#00C853"
        android:text="Unblock"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="12pt"
        app:layout_constraintTop_toBottomOf="@+id/textViewDelete"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/textViewDelete"
        android:layout_width="100dp"
        android:layout_height="87dp"
        android:background="#C21826"
        android:gravity="center"
        android:text="Delete"
        android:textColor="#fff"
        android:textSize="12pt"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

